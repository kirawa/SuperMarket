<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="altarix.supermarket" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name">
        <activity
            android:name="altarix.supermarket.Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="altarix.supermarket.PriceListProvider"
            android:authorities="altarix.supermarket.provider" >
        </provider>
        <activity
            android:name="altarix.supermarket.Main"
            android:label="@string/title_activity_main"
            android:theme="@style/AppBaseTheme">
        </activity>
    </application>

</manifest>
